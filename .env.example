# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Feature Flags
VITE_DEMO_MODE=false
VITE_ENABLE_AI=false
VITE_ENABLED_INTEGRATIONS=stripe,ga4

# Analytics (Optional)
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Error Reporting (Optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# OAuth Client IDs (Public - Safe for client-side)
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
VITE_META_APP_ID=your-meta-app-id
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# GA4 Integration (Public - Safe for client-side)
VITE_GA4_CLIENT_ID=your-ga4-oauth-client-id
VITE_GA4_REDIRECT_URI=https://yourdomain.com/integrations/oauth/callback

# Stripe Configuration (Public - Safe for client-side)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
VITE_STRIPE_PRICE_STARTER=price_starter_price_id
VITE_STRIPE_PRICE_PROFESSIONAL=price_professional_price_id
VITE_STRIPE_PRICE_AGENCY=price_agency_price_id

# PayPal Configuration (Public - Safe for client-side)
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_PAYPAL_MODE=sandbox

# Production Domain
VITE_SITE_URL=https://cmoxpert.com

# =============================================================================
